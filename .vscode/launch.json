    "version": "0.2.0",
    "configurations": [
        // run the client
        {
            "name": "Demo Client",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        // run the server
        {
            "type": "node-terminal",
            "name": "Demo Task Server",
            "request": "launch",
            "command": "ts-node src/ItemCheckerDemo/src/TaskRestServer.ts",
            "cwd": "${workspaceFolder}"
        },
        // test suites
        {
            "type": "node-terminal",
            "name": "Test JSON Container",
            "request": "launch",
            "command": "npx jest JSONFileContainer",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Test SQL Container",
            "request": "launch",
            "command": "npx jest SQLiteContainer",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Coverage File Container",
            "request": "launch",
            "command": "npx jest --coverage JSONFileContainer",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Coverage SQL Container",
            "request": "launch",
            "command": "npx jest --coverage SQLiteContainer",
            "cwd": "${workspaceFolder}"
        },
    ]
}